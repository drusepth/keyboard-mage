<div id="battle_scene">
	<div id="enemies"></div>

	<div id="spell_text"></div>

	<button id="cast_spell">Cast spell</button>
	<input type="text" id="spell_input" />
	<span id="spell_time_left"></span>

	<div class="spell_text"></div>
</div>

<script>
	$(document).ready(function () {

		$('#cast_spell').click(function () {
			var chosen_spell = spells[Math.floor(Math.random() * spells.length)];
			console.log('Attempting to cast ' + chosen_spell.name);

			engine.cast_spell(chosen_spell);
		});

	});
</script>